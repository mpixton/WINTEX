@{
    ViewData["Title"] = "Biological Sample Notes";
    Layout = "~/Views/Shared/_DetailsLayout.cshtml";
}

@model WINTEX.Models.BioSamplesNote



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div class="d-flex justify-content-center">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoteBody)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoteBody)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BioSample)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BioSample.BioSampleId)
            </dd>
        </dl>
    </div>
    <div class="d-flex flex-row justify-content-center mt-4">
        @if (User.IsInRole("Admin") || User.IsInRole("Researcher"))
        {
            <div class="d-flex p-1 mr-1">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.BioNoteId">Edit</a>
            </div>
        }
        <div class="d-flex p-1 ml-1">
            <a class="btn btn-admin" asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>
