<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - Fag el-Gamous - BYU Excavations Egypt</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="~/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">

    <!--Other Bootstrap that comes with asp.net-->
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@

    <!-- Custom CSS -->
    <link href="~/css/stylish-portfolio.min.css" rel="stylesheet">

    <!--Google Fonts-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Spectral+SC:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Spectral+SC:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Spectral+SC:ital,wght@0,400;0,700;1,500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

</head>

<body class="bg-light" id="page-top">

    <!-- Navigation -->
    <a class="menu-toggle rounded" href="#">
        <i class="fas fa-bars"></i>
    </a>
    <nav id="sidebar-wrapper">
        <div style="z-index:2">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a class="js-scroll-trigger" asp-controller="Home" asp-action="Index">Fag el-Gamous</a>
                </li>
                <li class="sidebar-nav-item">
                    <partial name="_LoginPartial" class="js-scroll-trigger" />
                </li>
                <li class="sidebar-nav-item">
                    <a class="js-scroll-trigger" asp-controller="Home" asp-action="Index">Home</a>
                </li>

                <li class="sidebar-nav-item">
                    <a class="js-scroll-trigger" asp-controller="Home" asp-action="NavigationPage">Data Collected</a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="js-scroll-trigger" asp-controller="Home" asp-action="DataInsights">Data Insights</a>
                </li>
            </ul>
        </div>
        <div class="d-flex justify-content-center" style="z-index: -1">
            <img src="~/img/LogoTransparent.png" class="" style="z-index: -1; max-width: 200px; position: absolute; bottom: 0; margin-bottom: 40px" />
        </div>
    </nav>

    <div class="text-center container p-3">
        <div class="d-flex justify-content-center mb-4">
            <div class="card cardLogin rounded-3 mx-5" style="min-width: 800px; margin-top: 85px; box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); overflow-x: scroll;">
                <div class="card-header d-flex justify-content-center px-2 py-2" style="background-color: #75a8b3; color: #fff">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center mx-3 my-3">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <div class="d-flex justify-content-center">
        <footer class="footer text-center" style="bottom: 0;">
            <div class="container">
                <br /><br />
                <p class="text-muted small mb-0">Copyright &copy; BYU Excavations Egypt 2021</p>
            </div>
        </footer>
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/js/stylish-portfolio.min.js"></script>

    <!-- Scripts from Original template, Code needed for authorization-->
    <!--Other Bootstrap that comes with asp.net-->
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
