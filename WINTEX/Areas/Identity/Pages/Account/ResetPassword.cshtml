@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="d-flex justify-content-center mb-5">
    <div class="card cardLogin rounded-3 pb-4" style="width: 1000px; margin-top: 85px; box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        <div class="card-header d-flex justify-content-center px-2 py-2" style="background-color: #d67751; color: #fff">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="d-flex justify-content-center pt-3">
            <h4>Reset your password.</h4>
        </div>
        <hr />
        <div class="d-flex justify-content-center">
            <div class="col-md-8">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.Code" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-admin">Reset</button>
                </form>
            </div>
        </div>
    </div>
</div>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
