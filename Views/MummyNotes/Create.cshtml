@{
    ViewData["Title"] = "Burial Notes";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

@model WINTEX.Models.MummyNote

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <form asp-action="Create">
        <div class="d-flex justify-content-center">
            <div class="d-flex flex-column ml-5 mr-2 my-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MummyId" class="control-label"></label>
                    <select asp-for="MummyId" class="form-control" asp-items="ViewBag.MummyId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="NoteType" class="control-label"></label>
                    <input asp-for="NoteType" class="form-control" />
                    <span asp-validation-for="NoteType" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-column ml-2 mr-5 my-3">
                <div class="form-group">
                    <label asp-for="NoteBody" class="control-label"></label>
                    <input asp-for="NoteBody" class="form-control" />
                    <span asp-validation-for="NoteBody" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="d-flex">
            <div class="d-flex justify-content-end mr-3" style="width: 50%">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
            <div class="d-flex justify-content-start ml-3" style="width: 50%">
                <div>
                    <a class="btn btn-admin" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
