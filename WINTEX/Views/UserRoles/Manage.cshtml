@using WINTEX.Models.Authentication.ViewModels
@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="d-flex justify-content-center mb-5">
        <div class="card cardLogin rounded-3" style="width: 1100px; margin-top: 85px; box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <div class="card-header d-flex justify-content-center px-2 py-2" style="background-color: #d67751; color: #fff">
                <h2>Manage User Roles</h2>
            </div>
            <div class="d-flex justify-content-center pt-3">
                Add/Remove Roles for User / @ViewBag.UserName.
            </div>
            <hr />
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].Selected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].Selected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-admin"
                       style="width:auto" />
                <a asp-controller="UserRoles" asp-action="Index"
                   class="btn btn-admin" style="width:auto">Cancel</a>
            </div>
        </div>
    </div>
</form>
